#!/usr/bin/python3

import os, sys ; sys.path.insert(0, os.getcwd())

import readline

from bot.shell import Shell, startup, reset
from bot.kernel import kernel

startup()

try:
    shell = Shell()
    kernel.start("botlib", [shell,])
    kernel.wait()
except (KeyboardInterrupt, EOFError):
    print("")

reset()
os._exit(0)

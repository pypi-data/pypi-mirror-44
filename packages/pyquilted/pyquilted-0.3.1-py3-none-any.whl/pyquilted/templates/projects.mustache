<div class="section projects">
    <div class="label">
        <div class="label-icon"><i class="fa {{icon}}"></i></div>{{label}}
    </div>
    {{#blocks}}
    <div class="block projects">
        <div class="activity-name">{{name}}</div>
        <div class="activity-flair">{{flair}}&nbsp;&nbsp;<i class="fa {{flair_icon}}"></i></div>
        <div class="activity-description">{{description}}</div>
        {{#slugs}}
        <div class="activity-slug">&mdash;{{.}}</div>
        {{/slugs}}
    </div>
    {{/blocks}}
    {{#groups}}
    <div class="block projects">
        <div class="project-flair"><i class="fa fa-github">&nbsp;&nbsp;</i></div>
        <div class="project-description">{{name}}&mdash;{{description}}</div>
    </div>
    {{/groups}}
</div>

<div class="section heading">
{{#heading-simple}}
    <div>
        <div class="name">{{name}}</div>
        {{#adjacent}}
        {{#title-detail}}<div class="adjacent">{{title}}</div>{{/title-detail}}
        {{#location-detail}}<div class="adjacent">{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i></div>{{/location-detail}}
        {{#flair-detail}}<div class="adjacent"><i class="fa {{icon}}"></i>&nbsp;&nbsp;{{flair}}</div>{{/flair-detail}}
        {{/adjacent}}
    </div>
    <div>
        {{#primary}}
        {{#title-detail}}<div class="primary">{{title}}</div>{{/title-detail}}
        {{#location-detail}}<div class="primary">{{location}}&nbsp;&nbsp;<i class="fa {{via}}"></i></div>{{/location-detail}}
        {{#flair-detail}}<div class="primary"><i class="fa {{icon}}"></i>&nbsp;&nbsp;{{flair}}</div>{{/flair-detail}}
        {{/primary}}
    </div>
{{/heading-simple}}
</div>

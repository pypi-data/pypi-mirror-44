<?xml version="1.0"?>

<!--
The following defines the transport map

T(x_{0:4}) = [T_0(x_0), T_1(x_0,x_1), ..., T_4(x_{0:4})]^T

where the components are linear span functions and
such that T is a linear map.
Differently from TotalOrdMonotLinearSpanLinearMap_5d.xml, here we
define the map through the active multi-indices
-->

<trimap 
    xmlns="TransportMaps"
    xmlns:st="SpectralToolbox"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="map.xsd"
    type="monotlinspan" dim="5">
  <component id="0">
    <avars>
      <vars>*</vars>
    </avars>
    <approx>
      <monotlinspan multidimtype="tensorized" spantype="midx">
	<midxlist>
	  <midx>0</midx>
	  <midx>1</midx>
	</midxlist>
        <spanbasis coord="*">
          <st:HermiteProbabilistsPolynomial/>
        </spanbasis>
      </monotlinspan>
    </approx>
  </component>
  <component id="1">
    <avars>
      <vars>*</vars>
    </avars>
    <approx>
      <monotlinspan multidimtype="tensorized" spantype="midx">
	<midxlist>
	  <midx>0,0</midx>
	  <midx>1,0</midx>
	  <midx>0,1</midx>
	</midxlist>
        <spanbasis coord="*">
          <st:HermiteProbabilistsPolynomial/>
        </spanbasis>
      </monotlinspan>
    </approx>
  </component>
  <component id="2">
    <avars>
      <vars>*</vars>
    </avars>
    <approx>
      <monotlinspan multidimtype="tensorized" spantype="midx">
	<midxlist>
	  <midx>0,0,0</midx>
	  <midx>1,0,0</midx>
	  <midx>0,1,0</midx>
	  <midx>0,0,1</midx>
	</midxlist>
        <spanbasis coord="*">
          <st:HermiteProbabilistsPolynomial/>
        </spanbasis>
      </monotlinspan>
    </approx>
  </component>
  <component id="3">
    <avars>
      <vars>*</vars>
    </avars>
    <approx>
      <monotlinspan multidimtype="tensorized" spantype="midx">
	<midxlist>
	  <midx>0,0,0,0</midx>
	  <midx>1,0,0,0</midx>
	  <midx>0,1,0,0</midx>
	  <midx>0,0,1,0</midx>
	  <midx>0,0,0,1</midx>
	</midxlist>
        <spanbasis coord="*">
          <st:HermiteProbabilistsPolynomial/>
        </spanbasis>
      </monotlinspan>
    </approx>
  </component>
  <component id="4">
    <avars>
      <vars>*</vars>
    </avars>
    <approx>
      <monotlinspan multidimtype="tensorized" spantype="midx">
	<midxlist>
	  <midx>0,0,0,0,0</midx>
	  <midx>1,0,0,0,0</midx>
	  <midx>0,1,0,0,0</midx>
	  <midx>0,0,1,0,0</midx>
	  <midx>0,0,0,1,0</midx>
	  <midx>0,0,0,0,1</midx>
	</midxlist>
        <spanbasis coord="*">
          <st:HermiteProbabilistsPolynomial/>
        </spanbasis>
      </monotlinspan>
    </approx>
  </component>
</trimap>

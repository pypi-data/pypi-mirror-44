{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "optimizer_config",
  "description": "Optimizer Config",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "default": "SGD"
    },
    "lr": {
      "type": "number",
      "default": 0.0
    },
    "momentum": {
      "type": "number",
      "default": null
    },
    "nesterov": {
      "type": "boolean",
      "default": false
    },
    "weight_decay": {
      "type": "number",
      "default": 1e-4
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "default": [
        {}
      ]
    }
  },
  "additionalProperties": false
}

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "optimizer_wrapper_config",
  "description": "Optimizer Wrapper Config",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "default": "SGD"
    },
    "lr": {
      "type": "number",
      "default": 0.0
    },
    "momentum": {
      "type": "number",
      "default": null
    },
    "nesterov": {
      "type": "boolean",
      "default": false
    },
    "weight_decay": {
      "type": "number",
      "default": 1e-4
    },
    "rules": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/group_rule_config"
      },
      "default": [
        {}
      ]
    }
  },
  "definitions": {
    "group_rule_config": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "title": "group_rule_config",
      "description": "Group Rule Config",
      "type": "object",
      "properties": {
        "module_type_list": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "param_name_list": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "prefix_list": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "weight_decay": {
          "type": "number",
          "default": null
        },
        "refuse_if_match": {
          "type": "boolean",
          "default": false
        }
      }
    }
  },
  "additionalProperties": false
}
